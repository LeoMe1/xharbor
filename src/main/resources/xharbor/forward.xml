<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean factory-bean="forwards" factory-method="addForward" destroy-method="call">
        <constructor-arg>
            <bean class="org.jocean.xharbor.reactor.ForwardData">
                <constructor-arg>
                    <bean class="org.jocean.xharbor.reactor.MatchRule">
                        <constructor-arg value="${forward.method:}"/>
                        <constructor-arg value="${forward.path:}"/>
                        <constructor-arg value="${forward.headers:}"/>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

</beans>
